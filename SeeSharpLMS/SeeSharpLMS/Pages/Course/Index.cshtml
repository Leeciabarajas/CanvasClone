@page
@model SeeSharpLMS.CourseIndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Courses</h1>

<p>
    <a class="btn btn-info col-3  form-control text-white" asp-page="../Section/Index">Edit Sections</a>
    <a class="btn btn-info col-3  form-control text-white" asp-page="Create">Create New Course</a>
</p>
<table class="table table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].CreditHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].CourseFee)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table bg-light">
@foreach (var item in Model.Course) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseFee)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a> 
        
            </td>
            <td>
                 <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">Details</a> 
            </td>
            <td>

                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
