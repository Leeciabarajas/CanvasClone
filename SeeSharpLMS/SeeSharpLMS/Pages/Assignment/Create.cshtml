@page
@model SeeSharpLMS.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Assignment.SectionId" class="control-label"></label>
                @*<select asp-for="Assignment.SectionId" class ="form-control" asp-items="ViewBag.SectionId"></select>*@
                <input asp-for="Assignment.SectionId" class="form-control border border-info" value="@Model.sectId" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Assignment.AssignmentTypeId" class="control-label"></label>
                <select asp-for="Assignment.AssignmentTypeId" class="form-control border border-info" asp-items="ViewBag.AssignmentTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.PointValue" class="control-label"></label>
                <input asp-for="Assignment.PointValue" class="form-control border border-info" />
                <span asp-validation-for="Assignment.PointValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Title" class="control-label"></label>
                <input asp-for="Assignment.Title" class="form-control border border-info" />
                <span asp-validation-for="Assignment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Instructions" class="control-label"></label>
                <input asp-for="Assignment.Instructions" class="form-control border border-info" />
                <span asp-validation-for="Assignment.Instructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.DueDate" class="control-label"></label>
                <input asp-for="Assignment.DueDate" class="form-control border border-info" />
                <span asp-validation-for="Assignment.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.CloseDate" class="control-label"></label>
                <input asp-for="Assignment.CloseDate" class="form-control border border-info" />
                <span asp-validation-for="Assignment.CloseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.OpenDate" class="control-label"></label>
                <input asp-for="Assignment.OpenDate" class="form-control border border-info" />
                <span asp-validation-for="Assignment.OpenDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Flag" class="control-label">
                    <input asp-for="Assignment.Flag" type="checkbox" checked hidden/>
                </label>
                <span asp-validation-for="Assignment.Flag" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
