@page
@model SeeSharpLMS.EnrollmentDetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Section ID:
        </dt>
        <dd class="col-sm-10">
            @*   @Html.DisplayFor(model => model.Enrollment.Section.Id)*@
            @Html.DisplayFor(modelItem => Model.Enrollment.Section.Id)
        </dd>

        <dt class="col-sm-2">
            Course Subject:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => Model.Enrollment.Section.Course.Subject)
        </dd>

        <dt class="col-sm-2">
            Course Number:
        </dt>
        <dd class="col-sm-10">
            @*  @Html.DisplayNameFor(model => model.Enrollment.ApplicationUser)*@
            @Html.DisplayFor(modelItem => Model.Enrollment.Section.Course.Number)
        </dd>


        <dt class="col-sm-2">
            Instructor:
        </dt>
        <dd class="col-sm-10">
            @*  @Html.DisplayFor(model => model.Enrollment.ApplicationUser.Id)*@
            @Html.DisplayFor(modelItem => Model.Enrollment.Section.ApplicationUser.FullName)
        </dd>


        <dt class="col-sm-2">
            Final Grade:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => Model.Enrollment.FinalGrade)
        </dd>


        <dt class="col-sm-2">
            Time: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => Model.Enrollment.Section.StartTime) - @Html.DisplayFor(modelItem => Model.Enrollment.Section.EndTime)
       </dd>


    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Enrollment.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
