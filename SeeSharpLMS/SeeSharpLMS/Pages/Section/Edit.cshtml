@page
@using SeeSharpLMS.Utility
@model SeeSharpLMS.SectionEditModel

@{
    ViewData["Title"] = "Edit";
}

@if (User.IsInRole(SD.InstructorRole))
{

    <h1>Edit</h1>

    <h4>Section</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Section.Id" />
                <div class="form-group">
                    <label asp-for="Section.InstructorId" class="control-label"></label>
                    @*<select asp-for="Section.InstructorId" class="form-control" asp-items="ViewBag.InstructorId"></select>*@
                    <input asp-for="Section.InstructorId" class="form-control border-info" value="@Model.user.Id" readonly />
                    <span asp-validation-for="Section.InstructorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Section.CourseId" class="control-label"></label>
                    <select asp-for="Section.CourseId" class="form-control  border-info" asp-items="ViewBag.CourseId"></select>
                    <span asp-validation-for="Section.CourseId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Section.TermId" class="control-label"></label>
                    <select asp-for="Section.TermId" class="form-control  border-info" asp-items="ViewBag.TermId"></select>
                    <span asp-validation-for="Section.TermId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Section.StartTime" class="control-label"></label>
                    <input asp-for="Section.StartTime" class="form-control  border-info" type="time"/>
                    <span asp-validation-for="Section.StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Section.EndTime" class="control-label"></label>
                    <input asp-for="Section.EndTime" class="form-control  border-info" type="time"/>
                    <span asp-validation-for="Section.EndTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Section.Days" class="control-label"></label><br />
                    @*<input asp-for="Section.Days" class="form-control" />
                    <span asp-validation-for="Section.Days" class="text-danger"></span>*@
                    <label for="MondayChb">
                        <input name="Days" id="MondayChb" type="checkbox" value="M" checked="@Model.Days.Contains("M")" />Monday
                    </label><br />
                    <label for="TuesdayChb">
                        <input name="Days" id="TuesdayChb" type="checkbox" value="T" checked="@Model.Days.Contains("T")" />Tuesday
                    </label><br />
                    <label for="WednesdayChb">
                        <input name="Days" id="WednesdayChb" type="checkbox" value="W" checked="@Model.Days.Contains("W")" />Wednesday
                    </label><br />
                    <label for="ThursdayChb">
                        <input name="Days" id="ThursdayChb" type="checkbox" value="R" checked="@Model.Days.Contains("R")" />Thursday
                    </label><br />
                    <label for="FridayChb">
                        <input name="Days" id="FridayChb" type="checkbox" value="F" checked="@Model.Days.Contains("F")" />Friday
</label>

</div>

<div class="form-group">
                    <label asp-for="Section.Location" class="control-label"></label>
                    <input asp-for="Section.Location" class="form-control  border-info" />
                    <span asp-validation-for="Section.Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Section.EnrollmentCap" class="control-label"></label>
                    <input asp-for="Section.EnrollmentCap" class="form-control  border-info" />
                    <span asp-validation-for="Section.EnrollmentCap" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
}
else
{
    <h1 class="text-danger">Access Denied</h1>

}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
